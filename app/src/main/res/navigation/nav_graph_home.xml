<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_home"
    app:startDestination="@id/selectorFragment">

    <fragment
        android:id="@+id/selectorFragment"
        android:name="com.rookmotion.rookconnectdemo.features.selector.SelectorFragment"
        android:label="@string/menu"
        tools:layout="@layout/fragment_selector">
        <action
            android:id="@+id/action_selectorFragment_to_connectionsPageFragment"
            app:destination="@id/connectionsPageFragment" />
        <action
            android:id="@+id/action_selectorFragment_to_modulesFragment"
            app:destination="@id/modulesFragment" />
        <action
            android:id="@+id/action_selectorFragment_to_SDKFragment"
            app:destination="@id/SDKFragment" />
    </fragment>
    <fragment
        android:id="@+id/HCAvailabilityFragment"
        android:name="com.rookmotion.rookconnectdemo.features.healthconnect.availability.HCAvailabilityFragment"
        android:label="@string/health_connect_availability"
        tools:layout="@layout/fragment_hc_availability">
        <action
            android:id="@+id/action_HCAvailabilityFragment_to_HCPermissionsFragment"
            app:destination="@id/HCPermissionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/HCPermissionsFragment"
        android:name="com.rookmotion.rookconnectdemo.features.healthconnect.permissions.HCPermissionsFragment"
        android:label="@string/health_connect_permissions"
        tools:layout="@layout/fragment_hc_permissions">
        <action
            android:id="@+id/action_HCPermissionsFragment_to_HCPlaygroundFragment"
            app:destination="@id/HCPlaygroundFragment" />
    </fragment>
    <fragment
        android:id="@+id/HCPlaygroundFragment"
        android:name="com.rookmotion.rookconnectdemo.features.healthconnect.playground.HCPlaygroundFragment"
        android:label="@string/health_connect"
        tools:layout="@layout/fragment_hc_playground" />
    <fragment
        android:id="@+id/connectionsPageFragment"
        android:name="com.rookmotion.rookconnectdemo.features.connectionspage.ui.ConnectionsPageFragment"
        android:label="@string/connections_page"
        tools:layout="@layout/fragment_connections_page" />
    <fragment
        android:id="@+id/modulesFragment"
        android:name="com.rookmotion.rookconnectdemo.features.modules.ModulesFragment"
        android:label="@string/modules"
        tools:layout="@layout/fragment_modules">
        <action
            android:id="@+id/action_modulesFragment_to_HCAvailabilityFragment"
            app:destination="@id/HCAvailabilityFragment" />
    </fragment>
    <fragment
        android:id="@+id/SDKFragment"
        android:name="com.rookmotion.rookconnectdemo.features.sdk.SDKFragment"
        android:label="@string/sdk"
        tools:layout="@layout/fragment_sdk" />
</navigation>