<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.rookmotion.rookconnectdemo.features.yesterdaysync.YesterdaySyncFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:text="@string/yesterday_sync_description" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:text="@string/yesterday_sync_requirements" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/android_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:checked="false"
            android:clickable="false"
            android:text="@string/yesterday_sync_android_permissions" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/request_android_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/request_permissions" />

        <TextView
            android:id="@+id/availability_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            tools:text="Health Connect is not installed. Please download from the Play Store" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/download_health_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/download_health_connect" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/health_connect_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:checked="false"
            android:clickable="false"
            android:text="@string/yesterday_sync_health_connect_permissions" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/request_health_connect_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_permissions" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/open_health_connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/open_health_connect" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/yesterday_sync_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:checked="false"
            android:clickable="false"
            android:text="@string/yesterday_sync" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yesterday_sync_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_yesterday_sync" />
    </LinearLayout>
</ScrollView>