<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".features.continuousupload.ContinuousUploadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/android_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:checked="false"
            android:clickable="false"
            android:text="@string/android_permissions" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/request_android_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/request_android_permissions" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/health_connect_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:checked="false"
            android:clickable="false"
            android:text="@string/health_connect_permissions" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/request_health_connect_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_permissions" />

        <com.google.android.material.card.MaterialCardView
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/open_health_connect_description" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/open_health_connect"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/open_health_connect" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/continuous_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:checked="false"
            android:clickable="false"
            android:text="@string/continuous_upload" />

        <TextView
            android:id="@+id/continuous_upload_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textIsSelectable="true" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/enable_continuous_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enable_continuous_upload" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/disable_continuous_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/disable_continuous_upload" />
    </LinearLayout>
</ScrollView>